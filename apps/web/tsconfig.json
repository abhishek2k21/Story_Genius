{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@repo/ui/*": [
                "../../packages/ui/src/*"
            ],
            "@repo/database/*": [
                "../../packages/database/src/*"
            ],
            "@repo/ai/*": [
                "../../packages/ai/src/*"
            ],
            "@repo/shared/*": [
                "../../packages/shared/src/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}