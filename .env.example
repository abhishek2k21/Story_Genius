# Story-Genius Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://storygenius:storygenius@localhost:5432/storygenius"
DB_HOST=localhost
DB_PORT=5432
DB_USER=storygenius
DB_PASSWORD=storygenius
DB_NAME=storygenius

# ===========================================
# REDIS
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# MINIO (S3-Compatible Storage)
# ===========================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=storygenius
MINIO_SECRET_KEY=storygenius123
MINIO_BUCKET=storygenius-assets
MINIO_USE_SSL=false

# ===========================================
# GOOGLE VERTEX AI
# ===========================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# ===========================================
# CLERK AUTHENTICATION
# ===========================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===========================================
# VIDEO GENERATION APIs
# ===========================================
RUNWAY_API_KEY=your-runway-api-key
PIKA_API_KEY=your-pika-api-key
REPLICATE_ACCESS_KEY=your-replicate-access-key
REPLICATE_SECRET_KEY=your-replicate-secret-key

# ===========================================
# AUDIO GENERATION
# ===========================================
ELEVENLABS_API_KEY=your-elevenlabs-api-key
SUNO_API_KEY=your-suno-api-key
UDIO_API_KEY=your-udio-api-key

# ===========================================
# PAYMENTS (Stripe)
# ===========================================
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token
POSTHOG_API_KEY=your-posthog-api-key
AXIOM_API_TOKEN=your-axiom-api-token
AXIOM_DATASET=storygenius

# ===========================================
# EMAIL (Resend)
# ===========================================
RESEND_API_KEY=your-resend-api-key

# ===========================================
# CDN / CLOUDFLARE
# ===========================================
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# ===========================================
# APP CONFIGURATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
API_URL=http://localhost:3001
